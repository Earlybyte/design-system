@import '~styles/ui-library.css'

h1, h2, h3, h4, h5, p, b, strong, td, th, a, li, .footer
 font-family: MetaPro, Arial, sans-serif

.home .hero img
  max-width 100%
  max-height: fit-content

.navbar .logo
  vertical-align: middle !important

@media screen and (min-width: 720px)
  .navbar .logo
    vertical-align: top !important


.sidebar-button
  color: #fff

#main-title
  color: #039

.custom-block.tip
  border-color: #009ee7;

.bd-color
  border-radius: 2px;
  box-shadow: 0 0 1px 0 rgb(0 33 98 / 15%);
  display: inline-block;
  float: left;
  height: 24px;
  margin-right: 8px;
  width: 24px;

header.navbar
  background-color: #039

  .logo
    margin-right: 8px

  .site-name,
  .nav-link,
  .router-link-active,
  .nav-links .repo-link
    color: #fff !important
    font-family: MetaPro, Arial, sans-serif
    font-weight: 400;
    line-height: 1.6;
    b
      font-weight: 800;

  .nav-links .repo-link svg
    color: #fff

  .nav-item, .nav-links .repo-link
    margin-left: 8px;

  .nav-links .repo-link,
  .nav-item > a
    padding: 6px 8px
    border-radius: 4px
    border: none !important

  .nav-item > a:hover,
  .nav-links .repo-link:hover
    background: #002162

  .nav-item > a.router-link-active
    border: none !important

  .nav-item > a.router-link-active:after
    content: '';
    height: 3px;
    background: #00adfd;
    position: absolute;
    width: 100%;
    left: 0;
    bottom: -12px;

  .links
    background-color: #039

